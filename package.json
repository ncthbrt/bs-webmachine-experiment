{
  "name": "reconstruct",
  "version": "0.1.0",
  "description": "Reason workflow with Esy",
  "license": "MIT",
  "esy": {
    "build": [
      [
        "refmterr",
        "jbuilder",
        "build"
      ]
    ],
    "install": [
      "esy-installer"
    ],
    "buildsInSource": "_build"
  },
  "scripts": {
    "bsb-build": "bsb -make-world",
    "bsb-watch": "bsb -w -make-world",
    "clean": "bsb -clean-world && rm -rf _build/ lib/"
  },
  "resolutions": {
    "**/@opam/lwt": "3.3.0"
  },
  "dependencies": {
    "@esy-ocaml/esy-installer": "^0.0.0",
    "@esy-ocaml/reason": "^3.0.0",
    "@opam/jbuilder": "^1.0.0-beta14",
    "refmterr": "^3.0.4",
    "repromise": "github:aantron/repromise"
  },
  "peerDependencies": {
    "ocaml": "~4.6.0"
  },
  "devDependencies": {
    "@esy-ocaml/merlin": "*",
    "ocaml": "~4.6.0"
  }
}